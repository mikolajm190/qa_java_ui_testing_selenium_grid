<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Internet-test" verbose="1" parallel="tests" thread-count="6">
    <test name="Test-chrome-slider">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="slider.SliderTests"/>
        </classes>
    </test>

    <test name="Test-chrome-login">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="login.LoginFormTests"/>
        </classes>
    </test>

    <test name="Test-chrome-loading">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="loaded.LoadingHiddenElementTests"/>
        </classes>
    </test>

    <test name="Test-chrome-dropdown">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="dropdown.DropdownTests"/>
        </classes>
    </test>

    <test name="Test-edge-dropdown">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="dropdown.DropdownTests"/>
        </classes>
    </test>

    <test name="Test-firefox-dropdown">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="dropdown.DropdownTests"/>
        </classes>
    </test>
</suite>